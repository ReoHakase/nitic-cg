<!doctype html>
<html>
  <head>
    <script src="/lightgl.js" is:inline></script>
    <script type="text/javascript" is:inline>
      function draw() {
        const gl = GL.create();

        gl.ondraw = function () {
          // 背景色の設定 (R, G, B, A)
          gl.clearColor(1.0, 0.0, 0.0, 1.0);

          // 画面をクリアする（塗りつぶし）
          gl.clear(gl.COLOR_BUFFER_BIT);
        };

        gl.fullscreen();
      }
    </script>
  </head>
  <body onload="draw();">
    <canvas id="glCanvas"></canvas>
  </body>
</html>
